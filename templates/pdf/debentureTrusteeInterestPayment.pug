doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Agenda Document
  style.
    * {
      margin: 0;
      padding: 0;
    }
    body {
      font-family: 'Arial';
    }
    .table-div{
      overflow-x: auto;
      margin: 1rem
    }
    table {
      border-collapse: collapse;
      width: 100%;
      border: 1px solid black;
      border-spacing: 0;
    }
    thead {
      color: #111;
      height: 25px;
    }
    .main-table-heading{
      text-align: center ;
    }
    th, td{
      border: 1px solid black;
      text-align: left;
      padding: 8px;
      font-size: 10px;
    }
    

body 
  - const moment = require('moment')
  div(class='table-div') 
    table
      thead
        tr 
          th S. No
          th Issuer Name
          th ISIN Number
          th Analyst Name
          th Group Head Name
          th Frequency of Interest
          th NCD Rated Amount
          th Interest Repayment Terms
          th Interest Repayment Date
          th Interest Paid On
          th Principal Repayment Date
          th Principal Paid On
      tbody(class="tbody")
        each company, key in data
          tr
            td #{key + 1} 
            td #{company.issuer_name}
            td #{company.isin_number}
            td #{company.analyst_name}
            td #{company.group_head_name}
            td #{company.interest_frequency}
            td #{company.rated_amount}
            td #{company.repayment_terms}
            td #{company.interest_due_date ? moment(company.interest_due_date).format("DD/MM/YYYY") : "-"}
            td #{company.interest_paid_on ? moment(company.interest_paid_on).format("DD/MM/YYYY") : "-"}
            td #{company.principal_repayment_date ? moment(company.principal_repayment_date).format("DD/MM/YYYY") : "-"}
            td #{company.principal_paid_on ? moment(company.principal_paid_on).format("DD/MM/YYYY") : "-"}